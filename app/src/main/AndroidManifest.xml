<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enestekin.instagramkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name="com.enestekin.Home.HomeActivity"></activity>
        <activity android:name="com.enestekin.Login.LoginActivity" />
        <activity android:name="com.enestekin.Profile.ProfileSettingActivity" />
        <activity android:name="com.enestekin.Share.ShareActivity" />
        <activity android:name="com.enestekin.Profile.Profile" />
        <activity android:name="com.enestekin.Search.Search" />
        <activity android:name="com.enestekin.News.News" />
        <activity android:name="com.enestekin.Login.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>